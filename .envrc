# Activate Hatch environment via hatch env find
VENV_DIR="$(hatch env find 2>/dev/null)"
if [ -n "$VENV_DIR" ] && [ -f "$VENV_DIR/bin/activate" ]; then
  echo "✅Activating Hatch environment from $VENV_DIR"
  source "$VENV_DIR/bin/activate"
else
  echo "⚠️ Hatch environment not found — run 'hatch env create'"
fi

